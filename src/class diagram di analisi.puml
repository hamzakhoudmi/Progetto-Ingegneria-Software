@startuml

class Film {
    -titolo: String
    -regista: String
    -anno: int
    -genere: String
    -voto: int
    -stato: Stato
    (nota: tutti gli attributi
    hanno getter e setter)
}

interface Collezione {
    +aggiungi()
    +modifica()
    +rimuovi()
    +cerca()
    +ordina()
    +salva()
}

class CollezioneSingleton {
    -lista: List<Film>
    +aggiungi()
    +modifica()
    +rimuovi()
    +cerca()
    +ordina()
    +salva()
}

Collezione <|.. CollezioneSingleton
CollezioneSingleton *-- Film

left to right direction

@enduml